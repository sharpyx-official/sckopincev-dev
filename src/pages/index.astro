---
import HistoryOfWork from '@components/About/HistoryOfWork.astro'
import TextHeader from '@components/TextHeader.astro'
import { HistoryOfWorkDb } from '@data/HistoryOfWorkService'
import MainLayout from '@layouts/MainLayout.astro'
import { t } from 'i18next'
---

<MainLayout
  title={t('pages.about.title')}
  description={t('pages.about.short_description')}
>
  <main class="flex flex-col gap-6">
    <div 
      class="
      self-center
      text-4xl
      flex
      flex-col
      items-center
      gap-8
      "
    >
      <img 
        src="/assets/avatar.jpg" 
        class="
          w-28
          h-28
          md:w-48
          md:h-48
          rounded-full
          shadow-2xl
          border-white
          border-4
          transition
          hover:rotate-12
        " 
        alt="Avatar"
      />
      <TextHeader class="text-2xl md:text-4xl">{t('common.myname')}</TextHeader>
    </div>
    <p class="pb-6">{t('pages.about.short_description')}</p>
    <HistoryOfWork works={HistoryOfWorkDb} />
  </main>
</MainLayout>
