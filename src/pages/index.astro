---
import BaseHead from '@components/BaseHead.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import TextHeader from '@components/TextHeader.astro'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="flex flex-col gap-6">
      <div class="self-center text-4xl">
        <TextHeader>Artem Skopincev</TextHeader>
      </div>
      <p>
        Hey! Welcome to my personal website. Thank your for you visit. Here you
        can see my tech stack, some useful tips and blog articles. You can write
        me an email (link in the footer).
      </p>
    </main>
    <Footer />
  </body>
</html>
